
@model IntranetPortal.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "OfficeManager | Change Password";
    Layout = "~/Views/Shared/_BlueLayout.cshtml";
}
<div class="row" style="max-width:600px">
    <form asp-area="" asp-controller="Home" asp-action="ChangePassword" method="post">
        <div class="card bg-secondary">
            <div class="card-header bg-success">
                <h4 class="text-white">Change Password</h4>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="mb-1">
                    @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-x-circle"></i>
                            <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-x-circle"></i>
                            <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
                <div class="col-md-12 mb-2">
                    <input type="hidden" asp-for="UserID" />
                    <label asp-for="UserFullName" class="form-label text-white fw-bold"></label>
                    <input asp-for="UserFullName" class="form-control fw-bold" readonly="readonly">
                    <div><span asp-validation-for="UserFullName" class="text-danger"></span></div>
                </div>
                <div class="col-md-12 mb-2">
                    <label asp-for="NewPassword" class="form-label text-white fw-bold"></label><span class="text-white fw-bold">*</span>
                    <input asp-for="NewPassword" class="form-control fw-bold">
                    <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label text-white fw-bold"></label><span class="text-white fw-bold">*</span>
                    <input asp-for="ConfirmPassword" class="form-control fw-bold">
                    <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
                </div>
                <div class="row">
                    @if (Model.OperationIsSuccessful)
                    {
                        <a asp-area="" asp-controller="Home" asp-action="Logout" class="btn btn-dark" style="width:100px" title="Go Back">
                            <span class="text-white">Exit</span>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-dark" style="width:100px" title="Go Back" onclick="window.history.back();">
                            <span class="text-white">Exit</span>
                        </a>
                    }

                    <button type="submit" class="btn btn-success" title="Change" style="width:200px"><span class="text-white">Change</span></button>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </form>
</div>
