@model IntranetPortal.Models.LoginViewModel
@{
     ViewData["Title"] = "OfficeManager | Login";
    Layout = "~/Views/Shared/_BlueLayout.cshtml";
}
<div class="card bg-body d-flex align-items-center justify-content-center" style="height:100vh">
    <div>
        <div class="card-body bg-gradient">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="row mb-3">
                <h3 class="text-secondary">Login</h3>
            </div>
            <form asp-controller="Home" asp-action="Login" method="post">
               <div class="text-danger" asp-validation-summary="ModelOnly"></div>
               <div class="row">
                   <input type="hidden" asp-for="ReturnUrl" />
                   <div class="input-group mb-3">
                       <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-fill" style="font-size:20px"></i></span>
                       <input asp-for="Login" class="form-control border-0" placeholder="Enter Username" autocomplete="off" autofocus>
                   </div>
                   <div><span asp-validation-for="Login" class="text-danger"></span></div>
               </div>
               <div class="row">
                   <div class="input-group mb-3">
                       <span class="input-group-text" id="basic-addon1"><i class="bi bi-key-fill" style="font-size:20px"></i></span>
                       <input asp-for="Password" class="form-control border-0" placeholder="Enter Password">
                   </div>
                   <div><span asp-validation-for="Password" class="text-danger"></span></div>
               </div>
                <div class="row">
                    <div class="col-sm-12 mb-4">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input pl-10" style="width:17px; height:17px">
                            <label class="custom-control-label pl-1" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 mb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Return to Home Page">
                            <span class="text-white">Exit</span>
                        </a>&nbsp;
                        <button type="submit" class="btn btn-success" style="width:150px" title="Login"><span class="text-white">Login</span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
