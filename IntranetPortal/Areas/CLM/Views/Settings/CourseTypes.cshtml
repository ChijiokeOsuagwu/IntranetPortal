@model IntranetPortal.Areas.CLM.Models.CourseTypesListViewModel
<div class="container">
    <h3 class="mb-1">Course Types</h3>
    <hr />
    <div class="mb-1">
        <div class="mb-2">
            <a asp-area="CLM" asp-controller="Settings" asp-action="Index" class="btn btn-dark" style="width:100px" title="Back">
                <span class="text-white">Back</span>
            </a>
            <a asp-area="CLM" asp-controller="Settings" asp-action="ManageCourseType" asp-route-id="0" class="btn btn-success" style="width:200px" title="Add New Course Type">
                <span class="text-white">New Course Type</span>
            </a>

            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

        <div class="row">
            @if (Model == null || Model.CourseTypesList == null || Model.CourseTypesList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <span class="text-white fw-bolder">Description</span>
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model.CourseTypesList)
                            {
                                <tr>
                                    <td class="p-l-10">
                                        <span class="fw-bolder">@item.CourseTypeDescription</span>
                                    </td>
                                    <td class="p-2 text-end">
                                        <a asp-area="CLM" asp-controller="Settings" asp-action="ManageCourseType" asp-route-id="@item.CourseTypeId" title="Edit" class="btn btn-sm btn-primary" style="width:100px">
                                            <i class="bi bi-pencil text-white fw-bold"></i><span class="text-white fw-bold ml-1">Edit</span>
                                        </a>
                                        <a asp-area="CLM" asp-controller="Settings" asp-action="DeleteCourseType" asp-route-id="@item.CourseTypeId" title="Delete" class="btn btn-sm btn-danger" style="width:100px">
                                            <i class="bi bi-trash text-white fw-bold"></i><span class="text-white fw-bold ml-1">Delete</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

