
@model IntranetPortal.Areas.WSP.Models.TaskListViewModel
<div class="container">
    <h4 class="mb-1">Task List for: @Model.FolderTitle</h4>
    <hr />
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="WSP" asp-controller="Workspace" asp-action="MyTaskFolders" asp-route-id="@Model.FolderOwnerID" title="Go Back" class="btn btn-sm btn-outline-light text-dark">
                                <i class="bi bi-backspace fw-bolder" style="font-size: 1.1rem;"></i>&nbsp;<span class="fw-bold ml-1" style="font-size: 1.0rem;">Back</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="WSP" asp-controller="Workspace" asp-action="ManageTask" asp-route-id="0" asp-route-fd="@Model.FolderID" asp-route-od="@Model.FolderOwnerID" title="Add New Task" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-plus-lg fw-bolder" style="font-size: 1.1rem; font-weight:900"></i><span class="fw-bold ml-1" style="font-size: 1.0rem;">Create New Task</span>
                            </a>
                        </li>
                        @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                                    <i class="bi bi-sliders fw-bolder" style="font-size: 1.1rem; font-weight:900"></i><span class="fw-bold ml-1" style="font-size: 1.0rem;">Copy Options</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="PMS" asp-controller="Process" asp-action="CopyKpaFromPastContract" asp-route-id="0" asp-route-rd="@Model.ReviewSessionID"><span class="fw-bold">Copy from Contract</span></a></li>
                                    <li><a class="dropdown-item" asp-area="PMS" asp-controller="Process" asp-action="CopyKpaFromProfile" asp-route-id="0" asp-route-rd="@Model.ReviewSessionID"><span class="fw-bold">Copy from Profile</span></a></li>
                                </ul>
                            </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="row">
        @if (Model == null || Model.TaskItems == null || Model.TaskItems.Count < 1)
        {
            <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold text-dark">No record was found.</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else
        {
            int row_number = 0;
            <div class="table-responsive">
                @foreach (var task in Model.TaskItems)
                {
                    row_number++;
                    <div class="card">
                        <div class="card-header bg-info">
                            <div class="row">
                                <div class="col-md-11">
                                    <span class="fw-bold text-white">#@row_number</span>
                                </div>
                                <div class="col-md-1 float-end">
                                    <!-- Default dropstart button -->
                                    <div class="btn-group dropstart">
                                        <button type="button" data-bs-toggle="dropdown" aria-expanded="false" class="bg-info" style="border:0px">
                                            <span class="fw-bold text-white" style="font-size:1.0rem;"><i class="bi bi-tools"></i></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                            <li>
                                                <a class="dropdown-item" asp-area="WSP" asp-controller="Workspace" asp-action="TaskItemInfo" asp-route-id="@task.Id">
                                                    <i class="bi bi-info-circle"></i>  <span>Detail</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="WSP" asp-controller="Workspace" asp-action="ManageTask" asp-route-id="@task.Id" asp-route-od="@task.TaskOwnerId" asp-route-fd="@task.WorkFolderId">
                                                    <i class="bi bi-pencil-fill"></i> <span>Edit</span>
                                                </a>
                                            <li>
                                            <li>
                                                <a class="dropdown-item" asp-area="WSP" asp-controller="Workspace" asp-action="DeleteTask" asp-route-id="@task.Id">
                                                    <i class="bi bi-trash-fill"></i>  <span>Delete</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="WSP" asp-controller="Workspace" asp-action="Notes" asp-route-td="@task.Id" asp-route-fd="@task.WorkFolderId" asp-route-sp="mtl" asp-route-tp="0">
                                                    <i class="bi bi-stickies"></i> <span>Notes</span>
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <button class="dropdown-item" id="btn_archive_@task.Id" onclick="archiveTaskList('@task.Id')">
                                                    <i class="bi bi-journal-album"></i> <span>Archive</span>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-secondary">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label text-dark fw-bold">Task No.:</label>
                                    <input asp-for="@task.Number" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label text-dark fw-bold">Start Date</label>
                                    @if (task.ExpectedStartTime != null)
                                    {
                                        <div class="form-control fw-bold" style="font-size:1.0rem">@task.ExpectedStartTime.Value.ToString("yyyy-MMM-dd")</div>
                                    }
                                    else
                                    {
                                        <div class="form-control fw-bold" style="font-size:1.0rem">[Not Specified]</div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label text-dark fw-bold">Due Date</label>
                                    @if (task.ExpectedDueTime != null)
                                    {
                                        <div class="form-control fw-bold" style="font-size:1.0rem">@task.ExpectedDueTime.Value.ToString("yyyy-MMM-dd")</div>
                                    }
                                    else
                                    {
                                        <div class="form-control fw-bold" style="font-size:1.0rem">[Not Specified]</div>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-2">
                                    <label class="form-label text-dark fw-bold">Description</label>
                                    <textarea asp-for="@task.Description" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">@task.Description</textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-2">
                                    <label class="form-label text-dark fw-bold">More Information</label>
                                    <textarea asp-for="@task.MoreInformation" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">@task.MoreInformation</textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-1">
                                    <label class="form-label text-dark fw-bold">Approval Status</label>
                                    <input asp-for="@task.ApprovalStatusDescription" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">
                                </div>
                                <div class="col-md-4 mb-1">
                                    <label class="form-label text-dark fw-bold">Progress Status</label>
                                    <input asp-for="@task.ProgressStatusDescription" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">
                                </div>
                                <div class="col-md-4 mb-1">
                                    <label class="form-label text-dark fw-bold">Stage</label>
                                    <input asp-for="@task.StageDescription" class="form-control fw-bold" style="font-size:1.0rem" readonly="readonly">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-end">
                                    @*<a asp-area="PMS" asp-controller="Process" asp-action="ManageAppraisalKpa" asp-route-id="@kpa.ReviewHeaderId" asp-route-md="@kpa.ReviewMetricId" class="btn btn-info" style="width:100px" title="Edit">
                                            <span class="text-white">Edit</span>
                                        </a>
                                        <a asp-area="PMS" asp-controller="Process" asp-action="DeleteAppraisalKpa" asp-route-id="@kpa.ReviewMetricId" class="btn btn-danger ml-1" style="width:100px" title="Delete">
                                            <span class="text-white">Delete</span>
                                        </a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
