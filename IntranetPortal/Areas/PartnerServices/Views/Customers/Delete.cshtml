
@model IntranetPortal.Areas.PartnerServices.Models.BusinessPartnerViewModel
@{
    ViewData["Title"] = "OfficeManager | Delete Customer";
}
<div>
    <div class="card" style="min-width:600px">
        <div class="card-header bg-danger">
            <h4 class="text-white">Delete Customer</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="PartnerServices" asp-controller="Customers" asp-action="Delete">
                <div class="row">
                    <div class="col-md-2 mb-1">
                        <label asp-for="BusinessNumber" class="form-label text-white fw-bold"></label>
                        <input asp-for="BusinessNumber" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-6 mb-1">
                        <input type="hidden" asp-for="BusinessID" />
                        <label asp-for="BusinessName" class="form-label text-white fw-bold"></label>
                        <input asp-for="BusinessName" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-4 mb-1">
                        <label asp-for="BusinessStationName" class="form-label text-white fw-bold"></label>
                        <input asp-for="BusinessStationName" class="form-control fw-bold" readonly="readonly">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-1">
                        <label asp-for="BusinessType" class="form-label text-white fw-bold"></label>
                        <input asp-for="BusinessType" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="BusinessAddress" class="form-label text-white fw-bold"></label>
                        <input asp-for="BusinessAddress" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-2 mb-1">
                        <label asp-for="State" class="form-label text-white fw-bold"></label>
                        <input asp-for="State" class="form-control fw-bold" readonly="readonly">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-1">
                        <label asp-for="PhoneNo1" class="form-label text-white fw-bold"></label>
                        <input asp-for="PhoneNo1" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="PhoneNo2" class="form-label text-white fw-bold"></label>
                        <input asp-for="PhoneNo2" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="Email1" class="form-label text-white fw-bold"></label>
                        <input asp-for="Email1" class="form-control fw-bold" readonly="readonly">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Email2" class="form-label text-white fw-bold"></label>
                        <input asp-for="Email2" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="WebLink1" class="form-label text-white fw-bold"></label>
                        <input asp-for="WebLink1" class="form-control fw-bold" readonly="readonly">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="WebLink2" class="form-label text-white fw-bold"></label>
                        <input asp-for="WebLink2" class="form-control fw-bold" readonly="readonly">
                    </div>
                </div>
                <div class="row">
                    <a asp-area="PartnerServices" asp-controller="Home" asp-action="Index" class="btn btn-dark ml-2" style="width:100px" title="Return Home">
                        <span class="text-white">Exit</span>
                    </a>
                    <a asp-area="PartnerServices" asp-controller="Customers" asp-action="List" class="btn btn-dark ml-1" style="width:100px" title="Return to Assets">
                        <span class="text-white">Go Back</span>
                    </a>
                    @if (!Model.OperationIsCompleted)
                    {
                       <button type="submit" class="btn btn-danger ml-2" title="Delete" style="width:200px" onclick="return confirm('Delete permanently?');"><span class="text-white">Delete</span></button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>








