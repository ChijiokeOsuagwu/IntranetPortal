@model IntranetPortal.Areas.EmployeeRecords.Models.EmployeeBasicInfoViewModel
@{
    ViewData["Title"] = "Employee Records | Employee Basic Info";
    Layout = "~/Areas/GlobalSettings/Views/Shared/_GBSLayout.cshtml";
}
<div class="card ml-5 mt-5 w-75">
    <div class="card-header bg-dark">
        <h4 class="text-white">Employee Information</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    <form enctype="multipart/form-data" asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddEmployeeBasicInfo" method="post">
        <div class="row">
            <div class="col-md-4 mb-2">
                <input type="hidden" asp-for="EmployeeID" />
                <input type="hidden" asp-for="EmployeeNo1" />
                <label asp-for="EmployeeName" class="form-label text-white fw-bold"></label>
                <input asp-for="EmployeeName" class="form-control" readonly="readonly">
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="EmployeeNo2" class="form-label text-white fw-bold"></label>
                <input asp-for="EmployeeNo2" class="form-control" placeholder="Custom Code">
                <div><span asp-validation-for="EmployeeNo2" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="EmploymentStatus" class="form-label text-white fw-bold"></label>
                <select asp-for="EmploymentStatus" class="form-control">
                    <option value="">- Select -</option>
                    <option value="Permanent">Permanent</option>
                    <option value="Non Permanent">Non Permanent</option>
                </select>
                <div><span asp-validation-for="EmploymentStatus" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-2">
                <label asp-for="CompanyCode" class="form-label text-white fw-bold"></label>
                <select asp-for="CompanyCode" asp-items="@ViewBag.CompanyList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="CompanyCode" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="LocationID" class="form-label text-white fw-bold"></label>
                <select asp-for="LocationID" asp-items="@ViewBag.LocationList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="LocationID" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="UnitID" class="form-label text-white fw-bold"></label>
                <select asp-for="UnitID" asp-items="@ViewBag.UnitList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="UnitID" class="text-danger"></span></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-2">
                <label asp-for="JobGrade" class="form-label text-white fw-bold"></label>
                <select asp-for="JobGrade"  class="form-control">
                    <option value="">- Select -</option>
                    <option value="Executive Management">Executive Management</option>
                    <option value="Management">Management</option>
                    <option value="Senior">Senior</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Middle">Middle</option>
                    <option value="Junior">Junior</option>
                </select>
                <div><span asp-validation-for="JobGrade" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="StartUpDate" class="form-label text-white fw-bold"></label>
                <input asp-for="StartUpDate"  class="form-control">
                <div><span asp-validation-for="StartUpDate" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="StartUpDesignation" class="form-label text-white fw-bold"></label>
                <input asp-for="StartUpDesignation" class="form-control">
                <div><span asp-validation-for="StartUpDesignation" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-2">
                <label asp-for="ReportsTo1_EmployeeID" class="form-label text-white fw-bold"></label>
                <select asp-for="ReportsTo1_EmployeeID" asp-items="@ViewBag.StaffList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="ReportsTo1_EmployeeID" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="ReportsTo2_EmployeeID" class="form-label text-white fw-bold"></label>
                <select asp-for="ReportsTo2_EmployeeID" asp-items="@ViewBag.StaffList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="ReportsTo2_EmployeeID" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="ReportsTo3_EmployeeID" class="form-label text-white fw-bold"></label>
                <select asp-for="ReportsTo3_EmployeeID" asp-items="@ViewBag.StaffList" class="form-control">
                    <option value="">- Select -</option>
                </select>
                <div><span asp-validation-for="ReportsTo3_EmployeeID" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Religion" class="form-label text-white fw-bold"></label>
                <select asp-for="Religion" class="form-control">
                    <option value=""> - Select -</option>
                    <option value="Christianity">Christianity</option>
                    <option value="Islam">Islam</option>
                    <option value="Atheism">Atheism</option>
                    <option value="Traditional Religion">Traditional Religion</option>
                    <option value="Other">Others</option>
                    
                </select>
                <div><span asp-validation-for="Religion" class="text-danger"></span></div>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="StateOfOrigin" class="form-label text-white fw-bold"></label>
                <select asp-for="StateOfOrigin" asp-items="@ViewBag.StateList" class="form-control">
                    <option value="">- Select -</option>
                </select>                
                <div><span asp-validation-for="StateOfOrigin" class="text-danger"></span></div>
            </div>
            <div class="col-md-4  mb-3">
                <label asp-for="LgaOfOrigin" class="form-label text-white fw-bold"></label>
                <input asp-for="LgaOfOrigin" class="form-control">
                <div><span asp-validation-for="LgaOfOrigin" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="List" class="btn btn-dark" style="width:100px" title="Return to Staff List">
                <span class="text-white">Exit</span>
            </a>&nbsp;
            <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddPersonalInfo" asp-route-id="@Model.EmployeeID" class="btn btn-dark" style="width:100px" title="Return to Previous">
                <span class="text-white">Go Back</span>
            </a>&nbsp;
            <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddEmployeeBasicInfo" class="btn btn-warning" style="width:100px" title="Clear">
                <span class="text-white">Clear</span>
            </a>&nbsp;
            @if (!Model.OperationIsCompleted)
            {
                <button type="submit" class="btn btn-primary" title="Save & Continue" style="width:200px"><span class="text-white">Save & Continue</span></button>
            }

            @if (Model.OperationIsCompleted & Model.OperationIsSuccessful)
            {
                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddEmployeeNextOfKinInfo" asp-route-id="@Model.EmployeeID" class="btn btn-success" style="width:150px" title="Add Next of Kin Info">
                    <span class="text-white">Add Next of Kin</span>
                </a> 
                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddEmployeeHistoryInfo" asp-route-id="@Model.EmployeeID" class="btn btn-success" style="width:150px" title="Add History Info">
                    <span class="text-white">Add History </span>
                </a>
            }
        </div>
    </form>
    </div>
</div>