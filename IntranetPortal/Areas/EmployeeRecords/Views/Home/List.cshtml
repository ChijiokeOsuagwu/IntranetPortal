@model IntranetPortal.Models.PaginatedList<Employee>
@{
    ViewData["Title"] = "Employee Records | Search";
    //Layout = "~/Areas/EmployeeRecords/Views/Shared/_ERMLayout.cshtml";
}
    <div class="container">
        <h3 class="mb-4">Employee List</h3>
        <hr />
        <div class="mb-1">
            <div class="mb-2">
                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Click to Go Back">
                    <span class="text-white">Back</span>
                </a>
                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddPersonalInfo" class="btn btn-success" style="width:200px" title="Click to Add New Employee">
                    <span class="text-white">New Employee</span>
                </a>
            </div>
            <div class="row">
                <form asp-area="EmployeeRecords" asp-controller="Home" asp-action="List" method="get">
                    <div class="form-actions no-color">
                        <p>
                            Enter Name: <input type="text" class="border-0" style="width:300px" name="SearchString" value="@ViewData["CurrentFilter"]" />
                            <input type="submit" value="Search" class="btn btn-primary" style="width:100px" />
                        </p>
                    </div>
                </form>
                <table class="table table-dark table-sm table-hover">
                    <thead>
                        <tr>
                            <th><span class="text-white fw-bolder">Employee No</span></th>
                            <th>
                                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="List" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"> <span class="text-white fw-bolder">Employee Name</span></a>
                            </th>
                            <th>
                                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="List" asp-route-sortOrder="@ViewData["UnitSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"><span class="text-white fw-bolder">Unit</span></a>
                            </th>
                            <th>
                                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="List" asp-route-sortOrder="@ViewData["LocSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"><span class="text-white fw-bolder">Location</span></a>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeNo1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationName)
                                </td>
                                <td>
                                    <a asp-action="AddPersonalInfo" asp-route-id="@item.EmployeeID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary @prevDisabled" style="width:100px">
                Previous
            </a>
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary @nextDisabled" style="width:100px">
                Next
            </a>
        </div>
    </div>
