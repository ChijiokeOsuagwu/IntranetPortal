
@model IntranetPortal.Areas.LMS.Models.LeaveProfileViewModel
<h3 class="mb-1">Leave Profiles Settings</h3>
<hr />
<div class="card mt-1" style="max-width:800px">
    <div class="card-header bg-danger">
        <h4 class="text-white">Delete Leave Profile</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-area="LMS" asp-controller="Settings" asp-action="DeleteLeaveProfile" method="post" autocomplete="off">
            <div class="row">
                <div class="col-md-8 mb-3">
                    <input type="hidden" asp-for="Id">
                    <label asp-for="Name" class="form-label text-white fw-bold"></label>
                    <div class="form-control">@Model.Name</div>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Description" class="form-label text-white fw-bold"></label>
                    <div class="form-control">@Model.Description</div>
                    <div><span asp-validation-for="Description" class="text-danger"></span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a asp-area="LMS" asp-controller="Settings" asp-action="LeaveProfiles" class="btn btn-dark" style="width:100px" title="Exit">
                        <span class="text-white">Exit</span>
                    </a>
                    <button type="submit" class="btn btn-danger" title="Delete" style="width:200px" onclick="return confirm('Are you sure you want to delete this item permanently?')"><span class="text-white">Delete</span></button>
                </div>
            </div>
        </form>
    </div>
</div>