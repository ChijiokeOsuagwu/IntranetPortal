
@model IntranetPortal.Areas.LMS.Models.LeaveProfilesListViewModel
<div class="container">
    <h3 class="mb-1">Leave Profiles</h3>
    <hr />
    <div class="mb-2">
        <a asp-area="LMS" asp-controller="Settings" asp-action="Index" class="btn btn-dark" style="width:100px" title="Exit">
            <span class="text-white">Back</span>
        </a>
        <a asp-area="LMS" asp-controller="Settings" asp-action="NewLeaveProfile" class="btn btn-success" style="width:150px" title="Add New Leave Profile">
            <span class="text-white">New Leave Profile</span>
        </a>

        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="row">
        @if (Model == null || Model.LeaveProfilesList == null || Model.LeaveProfilesList.Count < 1)
        {
            <div class="alert alert-info fade show" role="alert">
                <i class="bi bi-info-circle"></i>
                <span class="fw-bold">No record was found.</span>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover" style="max-width:1000px">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <span class="text-white fw-bolder">Name</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Description</span>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody class="table-light">
                        @foreach (var item in Model.LeaveProfilesList)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bolder">@item.Name</span>
                                </td>
                                <td>
                                    <span class="fw-bolder">@item.Description</span>
                                </td>
                                <td class="text-end">
                                    <a asp-area="LMS" asp-controller="Settings" asp-action="LeaveProfileDetails" asp-route-id="@item.Id" asp-route-nm="@item.Name" title="Leave Profile Options" class="btn btn-sm btn-dark" >
                                        <span class="text-white fw-bold">Options</span>
                                    </a>
                                    <a asp-area="LMS" asp-controller="Settings" asp-action="LeaveProfileEmployees" asp-route-id="@item.Id" title="Leave Profile Employees" class="btn btn-sm btn-success" >
                                        <span class="text-white fw-bold"><i class="bi bi-people"></i> Members</span>
                                    </a>
                                    <a asp-area="LMS" asp-controller="Settings" asp-action="EditLeaveProfile" asp-route-id="@item.Id" title="Edit" class="btn btn-sm btn-info" >
                                        <span class="text-white fw-bold">Edit</span>
                                    </a>
                                    <a asp-area="LMS" asp-controller="Settings" asp-action="DeleteLeaveProfile" asp-route-id="@item.Id" title="Delete" class="btn btn-sm btn-danger" >
                                        <span class="text-white fw-bold">Delete</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
