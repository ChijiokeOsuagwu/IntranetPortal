
@model IntranetPortal.Areas.LMS.Models.LeavePlanListViewModel
<div class="container">
    <h3 class="mb-1">My Leave Plans</h3>
    <hr />
    <div class="mb-2">
        <form asp-area="LMS" asp-controller="Home" asp-action="LeavePlans" method="get">
            <a asp-area="LMS" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px; margin-right:40px;" title="Exit">
                <span class="text-white">Back</span>
            </a>
            <input asp-for="yr" class="border-0" style="width:100px" min="2020" max="2050">
            <input type="submit" value="Search" class="btn btn-dark mr-3 text-white" style="width:150px; margin-right:20px" />
            <a asp-area="LMS" asp-controller="Home" asp-action="NewLeavePlan" asp-route-id="0" class="btn btn-success" style="width:150px" title="Add New Leave Plan">
                <span class="text-white">New Plan</span>
            </a>
        </form>

        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="row">
        @if (Model == null || Model.LeavePlanList == null || Model.LeavePlanList.Count < 1)
        {
            <div class="alert alert-info fade show" role="alert">
                <i class="bi bi-info-circle"></i>
                <span class="fw-bold">No record was found.</span>
            </div>
        }
        else
        {
            <div class="table-responsive" style="min-height:400px">
                <table class="table table-sm table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <span class="text-white fw-bolder">Year</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Leave Type</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Start On</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">End On</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Duration</span>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody class="table-light">
                        @foreach (var item in Model.LeavePlanList)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bolder">@item.LeaveYear</span>
                                </td>
                                <td>
                                    <span class="fw-bolder">@item.LeaveTypeName</span>
                                </td>
                                <td>
                                    <span class="fw-bolder">@item.LeaveStartDate.ToLongDateString()</span>
                                </td>
                                <td>
                                    <span class="fw-bolder">@item.LeaveEndDate.ToLongDateString()</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.Duration @item.DurationTypeDescription</span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="fw-bold text-dark"><i class="bi bi-three-dots"></i></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                            <li>
                                                <a asp-area="LMS" asp-controller="Home" asp-action="ViewLeavePlan" asp-route-id="@item.Id" title="Details" class="dropdown-item">
                                                    <span class="text-white"><i class="bi bi-info-circle"></i> View</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-area="LMS" asp-controller="Home" asp-action="EditLeavePlan" asp-route-id="@item.Id" title="Edit" class="dropdown-item">
                                                    <span class="text-white"><i class="bi bi-pencil-square"></i> Edit</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-area="LMS" asp-controller="Home" asp-action="DeleteLeavePlan" asp-route-id="@item.Id" title="Delete" class="dropdown-item">
                                                    <span class="text-white"><i class="bi bi-trash"></i> Delete</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>

