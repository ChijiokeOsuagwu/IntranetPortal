@model IntranetPortal.Areas.WKS.Models.WorkspaceViewModel
@{
    Layout = null;
}
<div class="row">
    <form asp-area="WKS" asp-controller="Settings" asp-action="AddOrEditWorkspace" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="OwnerID" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input name="Title" asp-for="Title" class="form-control border border-info" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info btn-block text-white fw-bold" value="Save" />
        </div>
    </form>
</div>
