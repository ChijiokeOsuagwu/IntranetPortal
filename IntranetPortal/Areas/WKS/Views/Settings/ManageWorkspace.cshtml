@model IntranetPortal.Areas.WKS.Models.WorkspaceViewModel
@{
    ViewData["Title"] = "Manage Workspace";
}
<div>
    <div class="card" style="max-width:400px">
        <div class="card-header bg-info">
            <h4 class="text-white">@ViewBag.FormLabel</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="WKS" asp-controller="Settings" asp-action="ManageWorkspace" method="post">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="OwnerID" />
                        <label asp-for="Title" class="form-label text-white fw-bold"></label>
                        <input asp-for="Title" class="form-control fw-bold">
                        <div><span asp-validation-for="Title" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a asp-area="WKS" asp-controller="Settings" asp-action="WorkspaceList" class="btn btn-dark ml-1" style="width:100px" title="Return to Asset List">
                            <span class="text-white">Back</span>
                        </a>
                        @if (!Model.OperationIsCompleted)
                        {
                            <a asp-area="WKS" asp-controller="Settings" asp-action="ManageWorkspace" asp-route-id="@Model.ID" class="btn btn-warning ml-1" style="width:100px" title="Clear">
                                <span class="text-white">Clear</span>
                            </a>
                            <button type="submit" class="btn btn-success ml-2" title="Save" style="width:100px"><span class="text-white">Save</span></button>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
}



