@model IntranetPortal.Areas.WKS.Models.WorkspaceViewModel
<div class="modal fade" id="addWorkspace">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h4 class="modal-title text-white" id="addWorkspaceLabel">New Workspace</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span class="text-white fw-bold">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-light">
                <form asp-area="WKS" asp-controller="Settings" asp-action="CreateWorkspace">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <input type="hidden" asp-for="OwnerID" />
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input name="Title" asp-for="Title" class="form-control" required="required" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success" data-save="modal"><span class="text-white">Save</span></button>
            </div>
        </div>
    </div>
</div>