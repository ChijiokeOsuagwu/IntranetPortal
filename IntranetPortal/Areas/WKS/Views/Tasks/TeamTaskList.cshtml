        <div class="alert alert-info fade show mt-2" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
        if (!string.IsNullOrWhiteSpace(Model.id))
        {
            <div class="row mt-3">
                <div class="col-md-6 col-lg-2 col-xlg-3">
                    <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="ManageTaskList" asp-route-od="@Model.id" asp-route-src="ttl">
                        <div class="card card-hover">
                            <div class="box bg-light text-center">
                                <h1 class="font-light text-dark" title="Create New Task Folder"><i class="bi bi-folder-plus"></i></h1>
                                <h6 class="text-dark">New Task Folder</h6>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    }
