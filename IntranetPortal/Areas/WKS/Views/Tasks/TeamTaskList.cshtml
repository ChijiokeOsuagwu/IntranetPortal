@model IntranetPortal.Areas.WKS.Models.TaskListViewModel
@{
    ViewData["Title"] = "OfficeManager | Team Task Lists";
}
<div class="container">
    <h4>Team Task Folders</h4>
    <hr />
    <div class="row">
        <form asp-area="WKS" asp-controller="Tasks" asp-action="TeamTaskList" method="get">
            <div class="row">
                <div class="col-md-2">
                    <a asp-area="WKS" asp-controller="Tasks" asp-action="index" class="btn btn-dark" style="width:100px" title="Back">
                        <span class="text-white">Back</span>
                    </a>
                </div>
                <div class="col-md-8 text-end">
                    <select asp-for="id" class="border-0" asp-items="@ViewBag.ReportsList" style="min-width:300px">
                        <option value=""> Select Staff </option>
                    </select>
                    <select asp-for="cm" class="border-0" style="width:100px">
                        <option value="0">All</option>
                        <option value="1">Jan</option>
                        <option value="2">Feb</option>
                        <option value="3">Mar</option>
                        <option value="4">Apr</option>
                        <option value="5">May</option>
                        <option value="6">Jun</option>
                        <option value="7">Jul</option>
                        <option value="8">Aug</option>
                        <option value="9">Sep</option>
                        <option value="10">Oct</option>
                        <option value="11">Nov</option>
                        <option value="12">Dec</option>
                    </select>
                    <input asp-for="cy" class="border-0" style="width:100px" type="number" min="2020" max="2060" />
                    <input type="submit" value="Search" class="btn btn-dark ml-2" style="width:100px" />
                </div>
                <div class="col-md-2 text-end">

                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    @if (Model == null || Model.TaskLists == null || Model.TaskLists.Count < 1)
