@model IntranetPortal.Areas.WKS.Models.TaskListViewModel
@{
    ViewData["Title"] = "OfficeManager | Active Task Folders";
}
<div class="container">
    <h4>Active Folders</h4>
    <hr />
    <div class="row mb-2">
        <form asp-area="WKS" asp-controller="Tasks" asp-action="TaskList" method="get">
            <div class="row">
                <div class="col-md-3">
                    <a asp-area="WKS" asp-controller="Tasks" asp-action="index" class="btn btn-dark" style="width:100px" title="Back">
                        <span class="text-white">Back</span>
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <select asp-for="cm" class="border-0" style="width:100px">
                        <option value="0">All</option>
                        <option value="1">Jan</option>
                        <option value="2">Feb</option>
                        <option value="3">Mar</option>
                        <option value="4">Apr</option>
                        <option value="5">May</option>
                        <option value="6">Jun</option>
                        <option value="7">Jul</option>
                        <option value="8">Aug</option>
                        <option value="9">Sep</option>
                        <option value="10">Oct</option>
                        <option value="11">Nov</option>
                        <option value="12">Dec</option>
                    </select>
                    <input asp-for="cy" class="border-0" style="width:100px" type="number" min="2020" max="2060" />
                    <input type="submit" value="Search" class="btn btn-dark ml-2" style="width:100px" />
                </div>
                <div class="col-md-3 text-end">
                    <a asp-area="WKS" asp-controller="Tasks" asp-action="ManageTaskList" class="btn btn-success" style="width:150px" title="Add New Folder">
                        <i class="bi bi-folder-plus text-white" style="font-size:1.0rem"></i><span class="text-white ml-2">New Folder</span>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    @if (Model == null || Model.TaskLists == null || Model.TaskLists.Count < 1)
    {
        <div class="alert alert-info fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
    }
    else
    {
        @if (Model != null && Model.TaskLists != null && Model.TaskLists.Count > 0)
        {
            <div class="row mt-5">
                @foreach (var taskList in Model.TaskLists)
                {
                    @if (taskList.IsLocked)
                    {
                        <div class="col-md-6 col-lg-2 col-xlg-3">
                                 <div class="card card-hover">
                                    <div class="box bg-light text-center">
                                        <h1 class="font-light text-dark" title="@taskList.Description"><i class="bi bi-folder-x"></i></h1>
                                        <h6 class="text-dark">@taskList.Name</h6>
                                        <!-- Default dropstart button -->
                                            <div class="btn-group dropstart">
                                                <button type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border:0px">
                                                    <span class="fw-bold" style="font-size:1.0rem;"><i class="bi bi-three-dots"></i></span>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                                    <li>
                                                        <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="Taskboard" asp-route-id="@taskList.Id">
                                                            <i class="bi bi-folder2-open"></i> <span>Open</span>
                                                        </a>
                                                    <li>
                                                    <li>
                                                        <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="SubmitTaskList" asp-route-id="@taskList.Id">
                                                            <i class="bi bi-mailbox"></i> <span>Submit</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="TaskListInfo" asp-route-id="@taskList.Id">
                                                            <i class="bi bi-info-circle"></i>  <span>Detail</span>
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item" href="#">
                                                            <i class="bi bi-stickies"></i> <span>Notes</span>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-menu-dark dropdown-submenu">
                                                            <li>
                                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="AddTaskNote" asp-route-id="0" asp-route-tl="@taskList.Id" asp-route-tp="l" asp-route-src="txb">
                                                                    <i class="bi bi-sticky"></i> <span>Drop a Note</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="TaskListNotes" asp-route-id="@taskList.Id">
                                                                    <i class="bi bi-stickies"></i> <span>View Notes</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </li>

                                                    <li>
                                                        <button class="dropdown-item" id="btn_archive_@taskList.Id" onclick="archiveTaskList('@taskList.Id')">
                                                            <i class="bi bi-journal-album"></i> <span>Archive</span>
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                    </div>
                                </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 col-lg-2 col-xlg-3">
                            <div class="card card-hover">
                                <div class="box bg-light text-center">
                                    <h1 class="font-light text-dark" title="@taskList.Description"><i class="bi bi-folder"></i></h1>
                                    <h6 class="text-dark">@taskList.Name</h6>
                                    <!-- Default dropstart button -->
                                    <div class="btn-group dropstart">
                                        <button type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border:0px">
                                            <span class="fw-bold" style="font-size:1.0rem;"><i class="bi bi-three-dots"></i></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                            <li>
                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="Taskboard" asp-route-id="@taskList.Id">
                                                    <i class="bi bi-folder2-open"></i> <span>Open</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="SubmitTaskList" asp-route-id="@taskList.Id">
                                                    <i class="bi bi-mailbox"></i> <span>Submit</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="TaskListInfo" asp-route-id="@taskList.Id">
                                                    <i class="bi bi-info-circle"></i>  <span>Detail</span>
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <i class="bi bi-stickies"></i> <span>Notes</span>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-dark dropdown-submenu">
                                                    <li>
                                                        <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="AddTaskNote" asp-route-id="0" asp-route-tl="@taskList.Id" asp-route-tp="l" asp-route-src="txb">
                                                            <i class="bi bi-sticky"></i> <span>Drop a Note</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="TaskListNotes" asp-route-id="@taskList.Id">
                                                            <i class="bi bi-stickies"></i> <span>View Notes</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>

                                            <li>
                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="ManageTaskList" asp-route-id="@taskList.Id">
                                                    <i class="bi bi-pencil-fill"></i>  <span>Edit</span>
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item" asp-area="WKS" asp-controller="Tasks" asp-action="DeleteTaskList" asp-route-id="@taskList.Id">
                                                    <i class="bi bi-trash-fill"></i>  <span>Delete</span>
                                                </a>
                                            </li>
                                            <li>
                                                <button class="dropdown-item" id="btn_archive_@taskList.Id" onclick="archiveTaskList('@taskList.Id')">
                                                    <i class="bi bi-journal-album"></i> <span>Archive</span>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        }
    }

</div>
@section Scripts{
    <script src="~/js/js_wks/wks_tsk_lst.js"></script>
}
