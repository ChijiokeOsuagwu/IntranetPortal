@model IntranetPortal.Areas.WKS.Models.LinkProgramViewModel
@{
    ViewData["Title"] = "OfficeManager | Task Settings";
}
<div class="container">
    <h4>Task Settings</h4>
    <hr />
    <div class="card" style="max-width:600px">
        <div class="card-header bg-info">
            <h4 class="text-white">Link Program</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        <form asp-area="WKS" asp-controller="Tasks" asp-action="LinkProgram" method="post" autocomplete="off">
            <div class="row">
                <div class="col-md-12 mb-2">
                    <label asp-for="ProgramCode" class="form-label text-white fw-bold"></label>
                    <select asp-for="ProgramCode" asp-items="@ViewBag.ProgrammeList" class="form-control fw-bold">
                        <option value="">Select</option>
                    </select>
                    <div><span asp-validation-for="ProgramCode" class="text-danger"></span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <input asp-for="ProgramTime" class="form-control fw-bold" />
                    <div><span asp-validation-for="ProgramTime" class="text-danger"></span></div>
                </div>
                <div class="col-md-7 text-end">
                    @if (Model.Source == "txb")
                    {
                        <a asp-area="WKS" asp-controller="Tasks" asp-action="Taskboard" asp-route-id="@Model.TaskListID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                            <span class="text-white">Back</span>
                        </a>
                    }
                    else if (Model.Source == "sbt")
                    {
                        <a asp-area="WKS" asp-controller="Tasks" asp-action="SubmittedTasks" asp-route-id="@Model.TaskListID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                            <span class="text-white">Back</span>
                        </a>
                    }
                    else if (Model.Source == "sbv")
                    {
                        <a asp-area="WKS" asp-controller="Tasks" asp-action="SubmittedEvaluations" asp-route-id="@Model.TaskListID"  class="btn btn-dark pt-3" style="width:100px" title="Go Back">
                            <span class="text-white">Back</span>
                        </a>
                    }
                    else
                    {
                        <a asp-area="WKS" asp-controller="Tasks" asp-action="TaskList" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                            <span class="text-white">Back</span>
                        </a>
                    }
                    <button type="submit" class="btn btn-info ml-2" title="Link to Task" style="width:150px"><span class="text-white">Link</span></button>
                </div>
            </div>
            <input type="hidden" asp-for="TaskItemID" />
            <input type="hidden" asp-for="TaskListID" />
            <input type="hidden" asp-for="Source" />
        </form>
        </div>
    </div>
</div>

