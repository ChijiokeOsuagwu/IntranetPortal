@model IntranetPortal.Areas.WKS.Models.ReassignTaskViewModel
@{
    ViewData["Title"] = "OfficeManager | Task Settings";
}
<div class="container">
    <h4>Manage Tasks</h4>
    <hr />
    <div class="card" style="max-width:800px">
        <div class="card-header bg-info">
            <h4 class="text-white">Select New Owner</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="WKS" asp-controller="Tasks" asp-action="SelectNewTaskOwner" method="post" autocomplete="off">
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label asp-for="OldTaskOwnerName" class="form-label text-white fw-bold"></label>
                        <input asp-for="OldTaskOwnerName" class="form-control fw-bold" readonly="readonly" />
                        <div><span asp-validation-for="OldTaskOwnerName" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label asp-for="NewTaskOwnerName" class="form-label text-white fw-bold"></label>
                        <select asp-for="NewTaskOwnerID" asp-items="@ViewBag.ReportsList" class="form-control fw-bold">
                            <option value="">Select</option>
                        </select>
                        <div><span asp-validation-for="NewTaskOwnerID" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        @if (Model.Source == "txb")
                        {
                            <a asp-area="WKS" asp-controller="Tasks" asp-action="Taskboard" asp-route-id="@Model.OldTaskListID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                                <span class="text-white">Back</span>
                            </a>
                        }
                        else if (Model.Source == "ttb")
                        {
                            <a asp-area="WKS" asp-controller="Tasks" asp-action="TeamTaskboard" asp-route-id="@Model.OldTaskListID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                                <span class="text-white">Back</span>
                            </a>
                        }
                        else if (Model.Source == "sbt")
                        {
                            <a asp-area="WKS" asp-controller="Tasks" asp-action="SubmittedTasks" asp-route-id="@Model.OldTaskListID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                                <span class="text-white">Back</span>
                            </a>
                        }
                        else if (Model.Source == "sbv")
                        {
                            <a asp-area="WKS" asp-controller="Tasks" asp-action="SubmittedEvaluations" asp-route-id="@Model.OldTaskListID" class="btn btn-dark pt-3" style="width:100px" title="Go Back">
                                <span class="text-white">Back</span>
                            </a>
                        }
                        else
                        {
                            <a asp-area="WKS" asp-controller="Tasks" asp-action="index" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                                <span class="text-white">Back</span>
                            </a>
                        }
                        <button type="submit" class="btn btn-info ml-2" title="Continue" style="width:150px"><span class="text-white">Continue</span></button>
                    </div>
                </div>
                <input type="hidden" asp-for="TaskItemID" />
                <input type="hidden" asp-for="OldTaskListID" />
                <input type="hidden" asp-for="OldTaskOwnerID" />
                <input type="hidden" asp-for="Source" />
            </form>
        </div>
    </div>
</div>


