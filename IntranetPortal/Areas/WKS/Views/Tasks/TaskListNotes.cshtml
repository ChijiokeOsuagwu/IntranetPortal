@model IntranetPortal.Areas.WKS.Models.TaskListNotesViewModel
@{
    ViewData["Title"] = "OfficeManager | Task Notes";
}
<div class="container">
    <h4>Task List Notes</h4>
    <hr />
    <div class="row">
        <div class="col-md-3 mb-1">
            @if (Model.Source == "txl")
            {
                <a asp-area="WKS" asp-controller="Tasks" asp-action="TaskList" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white"><i class="bi bi-backspace"></i> Back</span>
                </a>
            }
            else if (Model.Source == "sbt")
            {
                <a asp-area="WKS" asp-controller="Tasks" asp-action="SubmittedToMe" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white"><i class="bi bi-backspace"></i> Back</span>
                </a>
            }
            else
            {
                <a asp-area="WKS" asp-controller="Tasks" asp-action="index" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white"><i class="bi bi-backspace"></i> Back</span>
                </a>
            }
        </div>
        <div class="col-md-9 mb-1 text-end">
            <a class="btn btn-success" style="width:150px" asp-area="WKS" asp-controller="Tasks" asp-action="AddTaskNote" asp-route-tl="@Model.TaskListID" asp-route-tp="l" asp-route-src="sbt">
                <i class="bi bi-sticky text-white fw-bold"></i> <span class="text-white">New Note</span>
            </a>
        </div>
    </div>
    <div class="row">
        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@ViewBag.ErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    @if (Model == null || Model.TaskListNotes == null || Model.TaskListNotes.Count < 1)
    {
        <div class="alert alert-info fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
    }
    else
    {
        @if (Model != null && Model.TaskListNotes != null && Model.TaskListNotes.Count > 0)
        {
            <div class="row">
                <!-- column -->
                <div class="col-lg-6">
                    <div class="card">
                        <div class="comment-widgets scrollable">
                            @foreach (var note in Model.TaskListNotes)
                            {
                                <!-- Comment Row -->
                                <div class="d-flex flex-row comment-row mt-0">
                                    <div class="p-2">
                                        <img src="~/img/user_icon_128px.png" alt="user" width="50" class="rounded-circle">
                                    </div>
                                    <div class="comment-text w-100">
                                        <h6 class="font-medium">@note.NoteWrittenBy</h6>
                                        <span class="mb-3 d-block fw-bold" style="font-size:1.2rem">@note.NoteDescription</span>
                                        <div class="comment-footer">
                                            @if (note.NoteTime != null)
                                            {
                                                <span class="text-muted float-end">@note.NoteTime.Value.ToLongDateString() @note.NoteTime.Value.ToLongTimeString()</span>
                                            }
                                            <button type="button" class="btn btn-cyan btn-sm text-white">Edit</button>
                                            <button type="button" class="btn btn-success btn-sm text-white">Publish</button>
                                            <button type="button" class="btn btn-danger btn-sm text-white">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
