@model IntranetPortal.Areas.WKS.Models.TaskItemHistoryViewModel
@{
    ViewData["Title"] = "OfficeManager | Task Activity History";
}
<div class="container">
    <h4>Task Activity History</h4>
    <hr />
    <div class="row">
        <div class="col-md-12 mb-1 text-start">
            <button asp-area="WKS" asp-controller="Tasks" asp-action="Taskboard" asp-route-id="@Model.TaskListID" class="btn btn-dark" style="width:100px" title="Back" onclick="history.back()">
                <span class="text-white"><i class="bi bi-backspace"></i> Back</span>
            </button>
        </div>
    </div>
    <div class="row">
        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@ViewBag.ErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    @if (Model == null || Model.ActivityList == null || Model.ActivityList.Count < 1)
    {
        <div class="alert alert-info fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
    }
    else
    {
        @if (Model != null && Model.ActivityList != null && Model.ActivityList.Count > 0)
        {
            <div class="row">
                <div class="card text-white mb-3 bg-dark" style="max-width:1200px;">
                    <div class="card-header">Activities</div>
                    <div class="card-body">
                        <ul class="list-group">

                            @foreach (var activity in Model.ActivityList)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="col-md-12 mb-2">
                                        <h6 class="mb-1">@activity.ActivityDescription</h6>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h6 class="text-muted">By: @activity.ActivityBy </h6>
                                            </div>
                                            <div class="col-md-8">
                                                <h6 class="text-muted">On: @activity.ActivityTime.Value.ToLongDateString() @activity.ActivityTime.Value.ToLongTimeString() GMT</h6>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        }
    }
</div>










