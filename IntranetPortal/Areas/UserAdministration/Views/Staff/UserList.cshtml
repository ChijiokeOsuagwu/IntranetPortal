@model IntranetPortal.Models.PaginatedList<IntranetPortal.Base.Models.SecurityModels.EmployeeUser>
@{
    ViewData["Title"] = "User Administration | User List";
}
<div class="container">
    <h3 class="mb-4">User List</h3>
    <hr />
    <div class="mb-1">
        <div class="mb-2">
            <a asp-area="UserAdministration" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Click to Go Back">
                <span class="text-white">Back</span>
            </a>
            <a asp-area="UserAdministration" asp-controller="Staff" asp-action="SelectStaff" class="btn btn-success" style="width:200px" title="Click to Add New Staff User">
                <span class="text-white">New User</span>
            </a>
        </div>
        <div class="row">
            <form asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" method="get">
                <div class="form-actions no-color">
                    <p>
                        Enter Name: <input type="text" class="border-0" style="width:300px" name="SearchString" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-primary" style="width:100px" />
                    </p>
                </div>
            </form>
            <table class="table table-striped table-sm table-hover">
                <thead>
                    <tr class="bg-dark">
                        <th><span class="text-white fw-bolder">Employee No</span></th>
                        <th>
                            <a asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"> <span class="text-white fw-bolder">Full Name</span></a>
                        </th>
                        <th>
                            <a asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" asp-route-sortOrder="@ViewData["UnitSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"><span class="text-white fw-bolder">Unit</span></a>
                        </th>
                        <th>
                            <a asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" asp-route-sortOrder="@ViewData["LocSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"><span class="text-white fw-bolder">Location</span></a>
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.EmployeeNo1)</span>
                            </td>
                            <td>
                                <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.FullName)</span>
                            </td>
                            <td>
                                <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.UnitName)</span>
                            </td>
                            <td>
                                <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.LocationName)</span>
                            </td>
                            <td>
                                <a asp-area="UserAdministration" asp-controller="Staff" asp-action="EmployeeUserDetails" asp-route-id="@item.UserID" title="Details" class="btn btn-xs btn-info" style="width:50px">
                                    <i class="bi bi-card-text" style="font-size: 1.0rem; color:white"></i>
                                </a>
                                <a asp-area="UserAdministration" asp-controller="Home" asp-action="EditUserAccount" asp-route-id="@item.UserID" title="Edit" class="btn btn-xs btn-primary" style="width:50px">
                                    <i class="bi bi-pencil-square" style="font-size: 1.0rem;"></i>
                                </a>
                                <a asp-area="UserAdministration" asp-controller="Home" asp-action="ResetUserPassword" asp-route-id="@item.UserID" title="Reset Password" class="btn btn-xs btn-warning" style="width:50px">
                                    <i class="bi bi-key-fill" style="font-size: 1.0rem; color:white"></i>
                                </a>
                                <a asp-area="UserAdministration" asp-controller="Home" asp-action="UserPermissions" asp-route-id="@item.UserID" title="User Permissions" class="btn btn-xs btn-secondary" style="width:50px">
                                    <i class="bi bi-lock-fill" style="font-size: 1.0rem; color:white"></i>
                                </a>
                                <a asp-area="UserAdministration" asp-controller="Staff" asp-action="DeleteUserAccount" asp-route-id="@item.UserID" title="Delete" class="btn btn-xs btn-danger" style="width:50px">
                                    <i class="bi bi-trash-fill" style="font-size: 1.0rem; color:white"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-primary @prevDisabled" style="width:100px">
            Previous
        </a>
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-primary @nextDisabled" style="width:100px">
            Next
        </a>
    </div>
</div>


