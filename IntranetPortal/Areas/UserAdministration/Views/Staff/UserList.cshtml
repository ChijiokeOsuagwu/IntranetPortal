@model IntranetPortal.Areas.UserAdministration.Models.EmployeeUserListViewModel
@{
 ViewData["Title"] = "User Administration | User List";
}
<div class="container">
    <h3 class="mb-4">User List</h3>
    <hr />
    <div class="mb-1">
        <div class="mb-2">
            <form asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" method="get">
                <div class="form-actions no-color">
                    <a asp-area="UserAdministration" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Click to Go Back">
                        <span class="text-white">Back</span>
                    </a>
                    <input asp-for="ss" class="border-0 ml-1" style="width:300px" placeholder="Enter Name ..." />
                    <input type="submit" value="Search" class="btn btn-primary mr-2" style="width:150px" />
                    <a asp-area="UserAdministration" asp-controller="Staff" asp-action="SelectStaff" class="btn btn-success" style="width:100px" title="Click to Add New Staff User">
                        <span class="text-white">New User</span>
                    </a>
                </div>
            </form>
        </div>
        <div class="row">

            @if (Model == null || Model.EmployeeUsers == null || Model.EmployeeUsers.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <table class="table table-striped table-sm table-hover">
                    <thead>
                        <tr class="bg-dark">
                            <th><span class="text-white fw-bolder">Employee No</span></th>
                            <th>
                                <span class="text-white fw-bolder">Full Name</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Unit</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Location</span>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EmployeeUsers)
                        {
                            <tr>
                                <td>
                                    <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.EmployeeNo1)</span>
                                </td>
                                <td>
                                    <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.FullName)</span>
                                </td>
                                <td>
                                    <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.UnitName)</span>
                                </td>
                                <td>
                                    <span class="text-dark fw-bold">@Html.DisplayFor(modelItem => item.LocationName)</span>
                                </td>
                                <td>
                                    <a asp-area="UserAdministration" asp-controller="Staff" asp-action="EmployeeUserDetails" asp-route-id="@item.UserID" title="Select" class="btn btn-sm btn-info" style="width:100px">
                                        <span class="text-white fw-bold">Select</span>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/js_uad/user_permissions.js"></script>
}

