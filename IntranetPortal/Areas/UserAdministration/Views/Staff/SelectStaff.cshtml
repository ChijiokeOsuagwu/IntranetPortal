
@model IntranetPortal.Areas.UserAdministration.Models.SelectStaffListViewModel
    @{
        ViewData["Title"] = "User Administration | Select Staff";
        //Layout = "~/Areas/EmployeeRecords/Views/Shared/_ERMLayout.cshtml";
    }
    <div class="container">
        <h3 class="mb-4">Select Staff</h3>
        <hr />
        <div class="mb-1">
            <div class="mb-2">
                <a asp-area="UserAdministration" asp-controller="Staff" asp-action="UserList" class="btn btn-dark" style="width:100px" title="Click to Go Back">
                    <span class="text-white">Back</span>
                </a>
                <a asp-area="EmployeeRecords" asp-controller="Home" asp-action="AddPersonalInfo" class="btn btn-success" style="width:200px" title="Click to Add New Employee">
                    <span class="text-white">New Employee</span>
                </a>
            </div>
            <div class="row">
                <form asp-area="UserAdministration" asp-controller="Staff" asp-action="SelectStaff" method="get">
                    <div class="form-actions no-color">
                        <p>
                            Enter Name: <input asp-for="ss" class="border-0" style="width:300px"/>
                            <input type="submit" value="Search" class="btn btn-primary" style="width:100px" />
                        </p>
                    </div>
                </form>
                <table class="table table-dark table-sm table-hover">
                    <thead>
                        <tr>
                            <th><span class="text-white fw-bolder">Employee No</span></th>
                            
                            <th><h4 class="text-white fw-bolder">Name</h4></th>
                   
                            <th>
                                <h4 class="text-white fw-bolder">Unit</h4>
                            </th>
                            <th>
                                <h4 class="text-white fw-bolder">Location</h4></a>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Employees)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeNo1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationName)
                                </td>
                                <td>
                                    <a asp-area="UserAdministration" asp-controller="Staff" asp-action="ShowDetails" asp-route-id="@item.EmployeeID" title="Staff Details" class="btn btn-xs btn-info" style="width:50px">
                                        <i class="bi bi-card-text text-white" style="font-size: 1.0rem; color:white"></i>
                                    </a>
                                    <a asp-area="UserAdministration" asp-controller="Staff" asp-action="CreateUserAccount" asp-route-id="@item.EmployeeID" title="Select" class="btn btn-xs btn-success" style="width:50px">
                                        <i class="bi bi-caret-right-fill text-white" style="font-size: 1.0rem;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

