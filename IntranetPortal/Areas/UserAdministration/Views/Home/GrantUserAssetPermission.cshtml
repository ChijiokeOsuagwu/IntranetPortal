@model IntranetPortal.Areas.UserAdministration.Models.AssetPermissionViewModel
@{
    ViewData["Title"] = "OfficeManager | Grant Asset Permission";
}
<div>
    <div class="card" style="width:600px">
        <div class="card-header bg-success">
            <h4 class="text-white">Grant Asset Permission</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="UserAdministration" asp-controller="Home" asp-action="GrantUserAssetPermission" method="post" autocomplete="off">
                <div class="row">
                    <div class="col-mb-12 mb-3">
                        <input type="hidden" asp-for="AssetPermissionID" />
                        <input type="hidden" asp-for="UserID" />
                        <label asp-for="AssetDivisionID" class="form-label text-white fw-bold"></label>
                        <select asp-for="AssetDivisionID" asp-items="@ViewBag.AssetDivisionList" class="form-control fw-bold">
                            <option value=""> Select </option>
                        </select>
                        <div><span asp-validation-for="AssetDivisionID" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <a asp-area="UserAdministration" asp-controller="Home" asp-action="Index" class="btn btn-dark ml-2" style="width:100px" title="Return to Home">
                        <span class="text-white">Exit</span>
                    </a>
                    <a asp-area="UserAdministration" asp-controller="Staff" asp-action="AssetsPermissions" asp-route-id="@Model.UserID" class="btn btn-dark ml-1" style="width:100px" title="Go Back">
                        <span class="text-white">Go Back</span>
                    </a>
                    @if (!Model.OperationIsCompleted)
                    {
                        <a asp-area="UserAdministration" asp-controller="Home" asp-action="GrantUserAssetPermission" asp-route-id="@Model.UserID" class="btn btn-warning ml-1" style="width:100px" title="Clear">
                            <span class="text-white">Clear</span>
                        </a>
                        <button type="submit" class="btn btn-success ml-2" title="Save" style="width:200px"><span class="text-white">Grant</span></button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>



