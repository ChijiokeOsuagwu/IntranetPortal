
@model IntranetPortal.Areas.BAMS.Models.AssignmentUpdatesListViewModel
@{
    ViewData["Title"] = "OfficeManager | Assignment Updates";
}
<div class="container">
    <h4>Assignment Updates</h4>
    <hr />
    <div class="mb-1">
        <a asp-area="Bams" asp-controller="Home" asp-action="index" class="btn btn-dark pr-2" style="width:100px" title="Return to Home Page">
            <span class="text-white">Exit</span>
        </a>
        <a asp-area="Bams" asp-controller="Home" asp-action="AssignmentDetails" asp-route-id="@Model.AssignmentEventID" class="btn btn-dark" style="width:100px" title="Click to Go Back">
            <span class="text-white">Back</span>
        </a>
        <a asp-area="Bams" asp-controller="Extensions" asp-action="New" asp-route-id="@Model.AssignmentEventID" class="btn btn-success pl-4" style="width:200px" title="New Extension">
            <span class="text-white">New Extension</span>
        </a>

        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-10">
            <form asp-area="Bams" asp-controller="Updates" asp-action="List" method="post">
                <div class="card bg-secondary">
                    <div class="card-header bg-dark">
                        <div class="card-title text-white">New Update</div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div>
                            <input type="hidden" asp-for="AssignmentEventID" />
                            <label asp-for="UpdateType" class="form-label text-white fw-bold"></label>
                            <select asp-for="UpdateType" asp-items="@Html.GetEnumSelectList<AssignmentUpdateType>()" class="form-control fw-bold">
                            </select>
                            <div><span asp-validation-for="UpdateType" class="text-danger"></span></div>
                        </div>
                        <div>
                            <label asp-for="UpdateDescription" class="form-label text-white fw-bold"></label>
                            <textarea asp-for="UpdateDescription" class="form-control fw-bold"> @Model.UpdateDescription</textarea>
                            <div><span asp-validation-for="UpdateDescription" class="text-danger"></span></div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark" title="Save"><span class="text-white">Save</span></button>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </form>
        </div>
        @if (Model != null && Model.AssignmentUpdatesList != null && Model.AssignmentUpdatesList.Count > 0)
        {
            @foreach (var item in Model.AssignmentUpdatesList)
            {
                @switch (item.UpdateType)
                {
                    case AssignmentUpdateType.Incidence:
                        <div class="col-md-10 m-0 p-0">
                            <div class="card bg-danger">
                                <div class="card-header">
                                    <h4 class="card-title text-white">@item.UpdateType</h4>
                                </div>
                                <div class="card-body text-white">
                                    @item.UpdateDescription
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="button" title="Delete" class="btn btn-sm btn-danger" onclick="deleteAssignmentUpdate(@item.AssignmentUpdateID)"><span class="text-white"><i class="bi bi-trash"></i></span></button>
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                        break;
                    case AssignmentUpdateType.Information:
                        <div class="col-md-10 m-0 p-0">
                            <div class="card bg-info">
                                <div class="card-header">
                                    <h4 class="card-title text-white">@item.UpdateType</h4>
                                </div>
                                <div class="card-body text-white">
                                    @item.UpdateDescription
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="button" title="Delete" class="btn btn-sm btn-info" onclick="deleteAssignmentUpdate(@item.AssignmentUpdateID)"><span class="text-white"><i class="bi bi-trash"></i></span></button>
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                        break;
                    case AssignmentUpdateType.Progress:
                        <div class="col-md-10 m-0 p-0">
                            <div class="card bg-success">
                                <div class="card-header">
                                    <h4 class="card-title text-white">@item.UpdateType</h4>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body text-white">
                                    @item.UpdateDescription
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="button" title="Delete" class="btn btn-sm btn-success" onclick="deleteAssignmentUpdate(@item.AssignmentUpdateID)"><span class="text-white"><i class="bi bi-trash"></i></span></button>
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                        break;
                    default:
                        <div class="col-md-10 m-0 p-0">
                            <div class="card bg-secondary">
                                <div class="card-header">
                                    <h3 class="card-title text-white">@item.UpdateType</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body text-white">
                                    @item.UpdateDescription
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="button" title="Delete" class="btn btn-sm btn-secondary" onclick="deleteAssignmentUpdate(@item.AssignmentUpdateID)"><span class="text-white"><i class="bi bi-trash"></i></span></button>
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                        break;
                }
            }
        }
    </div>
</div>
@section Scripts{
    <script src="~/js/js_bams/bams_assignment_new.js"></script>
}
