@model IntranetPortal.Areas.BAMS.Models.ActiveAssignmentListViewModel
@{
    ViewData["Title"] = "OfficeManager | Active Assignments";
}
<div class="container">
    <h4>Active Assignments</h4>
    <hr />
    <div class="mb-1">
        <a asp-area="" asp-controller="Home" asp-action="Apps" class="btn btn-dark pr-2" style="width:100px" title="Return to Home Page">
            <span class="text-white">Exit</span>
        </a>
        <a asp-area="Bams" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Click to Go Back">
            <span class="text-white">Back</span>
        </a>
        <a asp-area="Bams" asp-controller="Home" asp-action="NewAssignment" class="btn btn-success pl-4" style="width:200px" title="New Assignment">
            <span class="text-white">New Assignment</span>
        </a>

        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@ViewBag.ErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    @if (Model == null || Model.AssignmentEventList == null || Model.AssignmentEventList.Count < 1)
    {
        <div class="alert alert-info fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
    }
    else
    {
        <div class="row">
            <div class="table-responsive">
                <table class="table table-hover table-sm ">
                    <thead class="table-dark">
                        <tr>
                            <th><span class="text-white fw-bold">Customer</span></th>
                            <th><span class="text-white fw-bold">Event Title</span></th>
                            <th><span class="text-white fw-bold">Station</span></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="table-success">
                        @foreach (var item in Model.AssignmentEventList )
                        {
                            <tr class="p-0">
                                <td>
                                    <span class="fw-bold">@item.CustomerName</span>
                                </td>
                                <td>
                                    <span class="fw-bold" title="@item.Description">@item.Title</span>
                                </td>
                                <td>
                                    <span class="fw-bold">@item.StationName</span>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <a asp-area="Bams" asp-controller="Home" asp-action="Details" asp-route-id="@item.ID" title="Details" class="btn btn-xs btn-dark text-white" style="width:50px">
                                            <i class="bi bi-card-text fw-bolder" style="font-size: 0.7rem;"></i>
                                        </a>
                                        <a asp-area="Bams" asp-controller="Home" asp-action="Edit" asp-route-id="@item.ID" title="Edit" class="btn btn-xs btn-info text-white" style="width:50px">
                                            <i class="bi bi-pencil-square fw-bolder" style="font-size: 0.7rem;"></i>
                                        </a>
                                        <a asp-area="Bams" asp-controller="Home" asp-action="UpdateProgress" title="Update Progress" class="btn btn-xs btn-success text-white" style="width:50px">
                                            <i class="bi bi-graph-up-arrow fw-bolder" style="font-size: 0.7rem;"></i>
                                        </a>
                                        @if (item.StatusID == 1 || item.StatusID == 5)
                                        {
                                            <a asp-area="Bams" asp-controller="Home" asp-action="Delete" asp-route-id="@item.ID" title="Delete" class="btn btn-xs btn-danger text-white" style="width:50px">
                                                <i class="bi bi-trash-fill fw-bolder" style="font-size: 0.7rem;"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>









