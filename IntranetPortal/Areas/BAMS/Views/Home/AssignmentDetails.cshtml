@model IntranetPortal.Areas.BAMS.Models.AssignmentEventViewModel
@{
    ViewData["Title"] = "OfficeManager | Assignment Details";
}
    <div>
      
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="Bams" asp-controller="Home" asp-action="EditAssignment" asp-route-id="@Model.ID" title="Edit" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-pencil-square fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Edit</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Bams" asp-controller="Home" asp-action="DeleteAssignment" asp-route-id="@Model.ID" title="Delete" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-trash fw-bolder" style="font-size: 1.0rem;  color:red;"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Delete</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Bams" asp-controller="Extensions" asp-action="List" asp-route-id="@Model.ID" title="Assignment Extension" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-code fw-bolder" style="font-size: 1.2rem; font-weight:600"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Extensions</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Bams" asp-controller="Updates" asp-action="List" asp-route-id="@Model.ID" title="Assignment Updates" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-chevron-double-up fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Updates</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Bams" asp-controller="Home" asp-action="CloseAssignment" asp-route-id="@Model.ID" title="Close" class="btn btn-sm btn-light text-dark">
                                <i class="bi bi-x-octagon fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Close</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-chat-square-text"></i>&nbsp;<span class="fw-bold" style="font-size: 0.8rem;">Notifications</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="Bams" asp-controller="Notifications" asp-action="CreateMessage" asp-route-id="@Model.ID" asp-route-tp="0">New Assignment</a></li>
                                <li><a class="dropdown-item" asp-area="Bams" asp-controller="Notifications" asp-action="CreateMessage" asp-route-id="@Model.ID" asp-route-tp="1">Assignment Extension</a></li>
                                <li><a class="dropdown-item" asp-area="Bams" asp-controller="Notifications" asp-action="CreateMessage" asp-route-id="@Model.ID" asp-route-tp="2">Assignment Cancellation</a></li>
                                <li><a class="dropdown-item" asp-area="Bams" asp-controller="Notifications" asp-action="CreateMessage" asp-route-id="@Model.ID" asp-route-tp="3">Assignment Update</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>        
        
        <div class="card" style="min-width:600px">
            <div class="card-header bg-primary">
                <h4 class="text-white">Assignment Details</h4>
            </div>
            <div class="card-body bg-secondary">
                @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-x-circle"></i>
                        <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i>
                        <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form asp-area="Bams" asp-controller="Home" asp-action="AssignmentDetails" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="CustomerID" />
                        <div class="col-md-6 mb-2">
                            <label asp-for="CustomerName" class="form-label text-white fw-bold"></label>
                            <input asp-for="CustomerName" class="form-control fw-bold" readonly="readonly" aria-label="Recipient's username" aria-describedby="button-addon2">
                        </div>
                        <div class="col-md-3 mb-2">
                            <label asp-for="StationName" class="form-label text-white fw-bold"></label>
                            <input asp-for="StationName" class="form-control fw-bold" readonly="readonly">
                        </div>
                        <div class="col-md-3 mb-2">
                            <label asp-for="EventTypeName" class="form-label text-white fw-bold"></label>
                            <input asp-for="EventTypeName" class="form-control fw-bold" readonly="readonly">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="Title" class="form-label text-white fw-bold"></label>
                            <input asp-for="Title" class="form-control fw-bold" readonly="readonly">
                        </div>
                        <div class="col-md-3 mb-2">
                            <label asp-for="StartTime" class="form-label text-white fw-bold"></label>
                            <label class="form-control fw-bold">@Model.StartTime.Value.ToLongDateString() @Model.StartTime.Value.ToLongTimeString()</label>
                        </div>
                        <div class="col-md-3 mb-2">
                            <label asp-for="EndTime" class="form-label text-white fw-bold"></label>
                            @if (Model.EndTime != null)
                            {
                                <label class="form-control fw-bold">@Model.EndTime.Value.ToLongDateString() @Model.EndTime.Value.ToLongTimeString()</label>
                            }
                            else
                            { <label class="form-control fw-bold"> - </label>}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="Description" class="form-label text-white fw-bold"></label>
                            <textarea asp-for="Description" class="form-control fw-bold" readonly="readonly">@Model.Description</textarea>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label asp-for="Venue" class="form-label text-white fw-bold"></label>
                            <textarea asp-for="Venue" class="form-control fw-bold" readonly="readonly">@Model.Venue</textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="State" class="form-label text-white fw-bold"></label>
                            <input asp-for="State" class="form-control fw-bold" readonly="readonly">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="StatusDescription" class="form-label text-white fw-bold"></label>
                            <input asp-for="StatusDescription" class="form-control fw-bold" readonly="readonly">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="LiaisonName" class="form-label text-white fw-bold"></label>
                            <input asp-for="LiaisonName" class="form-control fw-bold" readonly="readonly">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="LiaisonPhone" class="form-label text-white fw-bold"></label>
                            <input asp-for="LiaisonPhone" class="form-control fw-bold" readonly="readonly">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <input asp-for="IsPaid" type="checkbox" class="fw-bold pr-2 pt-2" disabled="disabled">
                            <span class="text-white fw-bold">This is a Paid Assignment</span>
                        </div>
                    </div>
                    <div class="row">
                        <a asp-area="Bams" asp-controller="Home" asp-action="AssignmentLog" class="btn btn-dark ml-2" style="width:100px" title="Return Home">
                            <span class="text-white">Exit</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>








