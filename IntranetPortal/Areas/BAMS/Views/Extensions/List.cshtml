
@model IntranetPortal.Areas.BAMS.Models.AssignmentExtensionListViewModel
@{
    ViewData["Title"] = "OfficeManager | Extensions";
}
<div class="container">
    <h4>Assignment Event Extensions</h4>
    <hr />
    <div class="mb-1">
        <a asp-area="Bams" asp-controller="Home" asp-action="index" class="btn btn-dark pr-2" style="width:100px" title="Return to Home Page">
            <span class="text-white">Exit</span>
        </a>
        <a asp-area="Bams" asp-controller="Home" asp-action="AssignmentDetails" asp-route-id="@Model.AssignmentEventID" class="btn btn-dark" style="width:100px" title="Click to Go Back">
            <span class="text-white">Back</span>
        </a>
        <a asp-area="Bams" asp-controller="Extensions" asp-action="New" asp-route-id="@Model.AssignmentEventID" class="btn btn-success pl-4" style="width:200px" title="New Extension">
            <span class="text-white">New Extension</span>
        </a>

        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@ViewBag.ErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    @if (Model == null || Model.AssignmentExtensionList == null || Model.AssignmentExtensionList.Count < 1)
    {
        <div class="alert alert-info fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <span class="fw-bold">No record was found.</span>
        </div>
    }
    else
    {
        <div class="row">
            <div class="table-responsive">
                <table class="table table-hover table-sm ">
                    <thead class="table-dark">
                        <tr>
                            <th><span class="text-white fw-bold">Extended From</span></th>
                            <th><span class="text-white fw-bold">Extended To</span></th>
                            <th><span class="text-white fw-bold">Type</span></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="table-success">
                        @foreach (var item in Model.AssignmentExtensionList)
                        {
                            <tr>
                                <td>
                                    @if (item.FromTime != null)
                                    {
                                        <span class="fw-bold">@item.FromTimeFormatted</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">[Not Set]</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ToTime != null)
                                    {
                                        <span class="fw-bold">@item.ToTimeFormatted</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">[Not Set]</span>
                                    }
                                </td>
                                <td>
                                       <span class="fw-bold">@item.ExtensionType</span>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <a asp-area="Bams" asp-controller="Extensions" asp-action="Details" asp-route-id="@item.AssignmentExtensionID" title="View Extension Details" class="btn btn-sm btn-dark text-white">
                                            <span class="fw-bolder text-white">Select</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>












