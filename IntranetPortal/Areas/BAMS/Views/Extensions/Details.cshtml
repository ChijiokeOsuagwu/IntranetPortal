@model IntranetPortal.Areas.BAMS.Models.AssignmentExtensionViewModel
@{
    ViewData["Title"] = "OfficeManager | Extension Details";
}
    <div>
        <div class="card" style="min-width:600px">
            <div class="card-header bg-dark">
                <h4 class="text-white">Extension Details</h4>
            </div>
            <div class="card-body bg-secondary">
                @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-x-circle"></i>
                        <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i>
                        <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form asp-area="Bams" asp-controller="Extensions" asp-action="Details" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="AssignmentEventID" />
                        <div class="col-md-12 mb-2">
                            <label asp-for="AssignmentEventTitle" class="form-label text-white fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="AssignmentEventTitle" class="form-control fw-bold" aria-label="Event Title" aria-describedby="button-addon2" readonly="readonly">
                            </div>
                            <div><span asp-validation-for="AssignmentEventTitle" class="text-danger"></span></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label asp-for="FromTimeFormatted" class="form-label text-white fw-bold"></label>
                            <input asp-for="FromTimeFormatted" class="form-control fw-bold" readonly="readonly">
                            <div><span asp-validation-for="FromTimeFormatted" class="text-danger"></span></div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label asp-for="ToTimeFormatted" class="form-label text-white fw-bold"></label>
                            <input asp-for="ToTimeFormatted" class="form-control fw-bold" readonly="readonly">
                            <div><span asp-validation-for="ToTime" class="text-danger"></span></div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label asp-for="ExtensionType" class="form-label text-white fw-bold"></label>
                            <input asp-for="ExtensionType" class="form-control fw-bold" readonly="readonly">
                            <div><span asp-validation-for="ExtensionType" class="text-danger"></span></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-2">
                            <label asp-for="ExtensionReason" class="form-label text-white fw-bold"></label>
                            <textarea asp-for="ExtensionReason" class="form-control fw-bold" readonly="readonly">@Model.ExtensionReason</textarea>
                            <div><span asp-validation-for="ExtensionReason" class="text-danger"></span></div>
                        </div>
                    </div>
                    <div class="row">
                        <a asp-area="Bams" asp-controller="Extensions" asp-action="List" asp-route-id="@Model.AssignmentEventID" class="btn btn-dark ml-2" style="width:100px" title="Return">
                            <span class="text-white">Exit</span>
                        </a>
                        <a asp-area="Bams" asp-controller="Extensions" asp-action="Delete" asp-route-id="@Model.AssignmentExtensionID" class="btn btn-danger ml-2" style="width:100px" title="Delete">
                            <span class="text-white">Delete</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
@section Scripts{
    <script src="~/js/js_bams/bams_assignment_new.js"></script>
}









