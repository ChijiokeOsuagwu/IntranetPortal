@model IntranetPortal.Areas.GlobalSettings.Models.TeamViewModel
@{
    ViewData["Title"] = "Team Settings | Edit Team";
    Layout = "~/Areas/GlobalSettings/Views/Shared/_GBSLayout.cshtml";
}
<div class="d-flex align-items-center justify-content-center" style="height:100vh">
    <div class="card" style="min-width:500px; max-width:600px">
        <div class="card-header bg-info">
            <h4 class="text-white">Edit Team</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="GlobalSettings" asp-controller="Teams" asp-action="Edit" method="post">
                <div class="row">
                    <div class="col-mb-12 mb-1">
                        <input type="hidden" asp-for="TeamID" />
                        <label asp-for="TeamName" class="form-label text-white fw-bold"></label>
                        <input asp-for="TeamName" class="form-control fw-bold">
                        <div><span asp-validation-for="TeamName" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-mb-12 mb-1">
                        <label asp-for="TeamDescription" class="form-label text-white fw-bold"></label>
                        <input asp-for="TeamDescription" class="form-control fw-bold" >
                        <div><span asp-validation-for="TeamDescription" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12  mb-3">
                        <label asp-for="TeamLocationID" class="form-label text-white fw-bold"></label>
                        <select asp-for="TeamLocationID" asp-items="@ViewBag.LocationList" class="form-control fw-bold">
                            <option value="">- Select -</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <a asp-area="GlobalSettings" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Return to Global Settings">
                        <span class="text-white">Exit</span>
                    </a>&nbsp;
                    <a asp-area="GlobalSettings" asp-controller="Teams" asp-action="List" class="btn btn-dark" style="width:100px" title="Return to Units List">
                        <span class="text-white">Go Back</span>
                    </a>&nbsp;
                    <a asp-area="GlobalSettings" asp-controller="Teams" asp-action="AddNew" class="btn btn-warning" style="width:100px" title="Clear">
                        <span class="text-white">Clear</span>
                    </a>&nbsp;
                    @if (!Model.OperationIsCompleted)
                    {
                        <button type="submit" class="btn btn-info" title="Save" style="width:200px"><span class="text-white">Save</span></button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>



