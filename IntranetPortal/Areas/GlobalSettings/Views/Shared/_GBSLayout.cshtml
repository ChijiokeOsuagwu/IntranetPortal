<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] | IntranetPortal</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome icons (free version)-->
    <script src="~/lib/font-awesome/js/all.js" crossorigin="anonymous"></script>
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/lib/startbootstrap/css/styles.css" rel="stylesheet" />
    <!-- Bootstrap icons -->
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <!-- Matrix CSS -->
    <link href="~/lib/matrix/dist/css/style.min.css" rel="stylesheet" />
    <!-- Quill CSS -->
    <link href="~/lib/quill/dist/quill.snow.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="index">
                <img src="~/img/logo_h60_w47.png" alt="" width="60" height="47" />
                <span class="fw-bold">OfficeManager</span>
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-1 my-1">
                        <a class="btn btn-outline-light" title="Go to Global Settings Home Page" asp-area="GlobalSettings" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-fill"></i> Home
                        </a>
                    </li>
                    <li class="nav-item dropdown mx-2 my-1">
                        <a class="btn btn-outline-light dropdown-toggle" id="navbarDropdownPortfolio" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Contents</a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Banners" asp-action="List">Banners</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Celebrations" asp-action="List">Celebrants</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Announcement" asp-action="List">Notices</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Articles" asp-action="Index">Articles</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown mx-2 my-1">
                        <a class="btn btn-outline-light dropdown-toggle" id="navbarDropdownPortfolio" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Banners" asp-action="Add">Banners</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Celebrations" asp-action="Add">Celebration</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Announcement" asp-action="Add">Announcement</a>
                            <a class="dropdown-item" asp-area="ContentManager" asp-controller="Articles" asp-action="Add">Article</a>
                        </div>
                    </li>
                    <li class="nav-item mx-1 my-1">
                        <a class="btn btn-outline-light" title="Go to Applications Home Page" asp-area="" asp-controller="Home" asp-action="Apps">
                            Applications
                        </a>
                    </li>
                    <li class="nav-item ml-1 mr-3 my-1 dropdown">
                        <a class="btn btn-outline-light dropdown-toggle" id="navbarDropdownPages" data-bs-toggle="dropdown" role="button" aria-expanded="false" title="User Options">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPages">
                            <a class="dropdown-item" href="#"><i class="bi bi-person-badge"></i> View Profile</a>
                            <a class="dropdown-item" href="#"><i class="bi bi-pencil-square"></i> Change Password</a>
                            <a class="dropdown-item" href="#"><i class="bi bi-door-closed-fill"></i> Log Out</a>
                        </div>
                    </li>
                    <li class="nav-item mx-1 my-1">
                        <a class="btn btn-outline-light position-relative" title="Click to open Message Inbox">
                            <i class="bi bi-envelope-fill"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                99+
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="px-1 py-1 mx-1 my-1" style="min-height:500px">
        @RenderBody()
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Channels Incorporated @DateTime.Now.Year</p></div>
    </footer>
    <!-- jQuery JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- jQuery Unobstructive Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- Bootstrap core JS-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/lib/startbootstrap/js/scripts.js"></script>
    <!-- Matrix JS -->
    <script src="~/lib/matrix/dist/js/waves.js"></script>
    <!-- Quill JS -->
    <script src="~/lib/quill/dist/quill.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>

