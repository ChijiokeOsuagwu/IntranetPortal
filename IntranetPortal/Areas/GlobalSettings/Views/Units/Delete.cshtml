@model IntranetPortal.Areas.GlobalSettings.Models.UnitViewModel
@{
    ViewData["Title"] = "Unit Settings | Delete Unit";
    Layout = "~/Areas/GlobalSettings/Views/Shared/_GBSLayout.cshtml";
}
<div class="card ml-5 mt-5 w-50">
    <div class="card-header bg-dark">
        <h4 class="text-white">Delete Unit</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    <form asp-area="GlobalSettings" asp-controller="Units" asp-action="Delete" method="post">
        <div class="row">
            <div class="col-mb-12 mb-1">
                <input type="hidden" asp-for="UnitID" />
                <label asp-for="UnitName" class="form-label text-white fw-bold"></label>
                <input asp-for="UnitName" class="form-control" placeholder="Enter Name" readonly="readonly">
            </div>
        </div>
        <div class="row">
            <div class="col-mb-12 mb-1">
                <label asp-for="DepartmentName" class="form-label text-white fw-bold"></label>
                <input asp-for="DepartmentName" class="form-control" readonly="readonly">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6  mb-1">
                <label asp-for="UnitHeadName1" class="form-label text-white fw-bold"></label>
                <input asp-for="UnitHeadName1" class="form-control" readonly="readonly" />
            </div>
            <div class="col-md-6  mb-3">
                <label asp-for="UnitHeadName2" class="form-label text-white fw-bold"></label>
                <input asp-for="UnitHeadName2" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="row">
            <a asp-area="GlobalSettings" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:100px" title="Return to Global Settings">
                <span class="text-white">Exit</span>
            </a>&nbsp;
            <a asp-area="GlobalSettings" asp-controller="Departments" asp-action="List" class="btn btn-dark" style="width:100px" title="Return to Department List">
                <span class="text-white">Go Back</span>
            </a>&nbsp;
            @if (!Model.OperationIsCompleted)
            {
                <button type="submit" class="btn btn-danger" title="Delete Permanently" style="width:200px"><span class="text-white">Delete Permanently</span></button>
            }
        </div>
    </form>
    </div>
</div>








