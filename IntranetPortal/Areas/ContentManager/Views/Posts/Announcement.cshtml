@model IntranetPortal.Areas.ContentManager.Models.AnnouncementViewModel
@{
    ViewData["Title"] = "OfficeManager | Update Announcement";
}
<div class="mt-5">
    <div class="card" style="max-width:600px">
        <div class="card-header bg-info">
            <h4 class="text-white">Update Announcement</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-area="ContentManager" asp-controller="Posts" asp-action="Announcement" method="post">
                <div class="row">
                    <input type="hidden" asp-for="PostId" />
                    <input type="hidden" asp-for="PostTypeId" />
                    <div class="col-md-12 mb-3">
                        <label asp-for="PostDetails" class="form-label text-white fw-bold"></label><span class="text-white">*</span>
                        <textarea asp-for="PostDetails" class="form-control fw-bold" rows="3">@Model.PostDetails</textarea>
                        <div><span asp-validation-for="PostDetails" class="text-danger"></span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        <a asp-area="ContentManager" asp-controller="Home" asp-action="Index" class="btn btn-dark ml-2" style="width:100px" title="Exit">
                            <span class="text-white">Back</span>
                        </a>
                        <a asp-area="ContentManager" asp-controller="Posts" asp-action="Announcement" asp-route-id="@Model.PostId" class="btn btn-warning ml-1" style="width:100px" title="Clear">
                            <span class="text-white">Clear</span>
                        </a>
                        <button type="submit" class="btn btn-primary ml-2" title="Save" style="width:200px"><span class="text-white">Save Changes</span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

