                    <div class="box bg-light text-center">
                        <h1 class="font-light text-dark"><i class="bi bi-columns-gap"></i></h1>
                        <h6 class="text-dark">Asset Types</h6>
                    </div>
                </div>
            </a>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
