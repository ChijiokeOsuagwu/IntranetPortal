@model IntranetPortal.Areas.AssetManager.Models.AssetListViewModel
@{
    ViewData["Title"] = "OfficeManager | Assets Master List";
}
    <div class="container">
        <h4>Assets Master List</h4>
        <hr />
        <div class="row mb-2">
            <form asp-area="AssetManager" asp-controller="Master" asp-action="List" method="get">
                <a asp-area="AssetManager" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width:75px" title="Click to Go Back">
                    <span class="text-white">Back</span>
                </a>
                <select asp-for="gp" asp-items="@ViewBag.AssetGroupList" class="border-0" style="width:300px">
                    <option value="">- Select Group -</option>
                </select>
                <select asp-for="tp" asp-items="@ViewBag.AssetTypeList" class="border-0" style="width:300px">
                    <option value="">- Select Type -</option>
                </select>
                <input asp-for="an" placeholder="Enter Name" class="border-0" style="width:250px" />
                <input type="submit" value="Search" class="btn btn-dark mr-2" style="width:75px" />
                <a asp-area="AssetManager" asp-controller="Master" asp-action="SelectType" class="btn btn-success" style="width:100px" title="Add New Asset">
                    <span class="text-white">New Asset</span>
                </a>
            </form>
        </div>
        <div class="row">
            @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@ViewBag.ErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        @if (Model.AssetList == null || Model.AssetList.Count < 1)
        {
            <div class="alert alert-info fade show" role="alert">
                <i class="bi bi-info-circle"></i>
                <span class="fw-bold">No record was found.</span>
            </div>
        }
        else
        {
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-hover table-sm ">
                        <thead class="table-dark">
                            <tr>
                                <th><span class="text-white fw-bold">No</span></th>
                                <th><span class="text-white fw-bold">Name</span></th>
                                <th><span class="text-white fw-bold">Condition</span></th>
                                <th><span class="text-white fw-bold">Usage Status</span></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var asset in Model.AssetList)
                            {
                                switch (asset.ConditionStatus)
                                {
                                    case AssetCondition.InGoodCondition:
                                        <tr class="p-0 table-success">
                                            <td>
                                                <span class="fw-bold">@asset.AssetNumber</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.AssetDescription">@asset.AssetName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.ConditionDescription">In Good Condition</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@asset.UsageStatus</span>
                                                @if (asset.NoOfConfirmedBooking > 0)
                                                {
                                                    <a asp-area="AssetManager" asp-controller="Home" asp-action="BookingList" asp-route-id="@asset.AssetID" title="This equipment is Booked. Click to view Booking List">
                                                        <span class="text-white fw-bold"><i class="bi bi-bookmarks-fill ml-2" style="font-size: 1.0rem; color:black"></i></span>
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a asp-area="AssetManager" asp-controller="Master" asp-action="Details" asp-route-id="@asset.AssetID" title="Details" class="btn btn-sm btn-dark">
                                                        <span class="text-white fw-bold">Select</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        break;
                                    case AssetCondition.RequiresRepair:
                                        <tr class="p-0 table-warning">
                                            <td>
                                                <span class="fw-bold">@asset.AssetNumber</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.AssetDescription">@asset.AssetName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.ConditionDescription">Requires Repair</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@asset.UsageStatus</span>
                                                @if (asset.NoOfConfirmedBooking > 0)
                                                {
                                                    <a asp-area="AssetManager" asp-controller="Home" asp-action="BookingList" asp-route-id="@asset.AssetID" title="This equipment is Booked. Click to view Booking List">
                                                        <span class="text-white fw-bold"><i class="bi bi-bookmarks-fill ml-2" style="font-size: 1.0rem; color:black"></i></span>
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a asp-area="AssetManager" asp-controller="Master" asp-action="Details" asp-route-id="@asset.AssetID" title="Details" class="btn btn-sm btn-dark">
                                                        <span class="text-white fw-bold">Select</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        break;
                                    case AssetCondition.BeyondRepair:
                                        <tr class="p-0 table-danger">
                                            <td>
                                                <span class="fw-bold">@asset.AssetNumber</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.AssetDescription">@asset.AssetName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.ConditionDescription">Beyond Repair</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@asset.UsageStatus</span>
                                                @if (asset.NoOfConfirmedBooking > 0)
                                                {
                                                    <a asp-area="AssetManager" asp-controller="Home" asp-action="BookingList" asp-route-id="@asset.AssetID" title="This equipment is Booked. Click to view Booking List">
                                                        <span class="text-white fw-bold"><i class="bi bi-bookmarks-fill ml-2" style="font-size: 1.0rem; color:black"></i></span>
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a asp-area="AssetManager" asp-controller="Master" asp-action="Details" asp-route-id="@asset.AssetID" title="Details" class="btn btn-sm btn-dark">
                                                        <span class="text-white fw-bold">Select</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        break;
                                    default:
                                        <tr class="p-0">
                                            <td>
                                                <span class="fw-bold">@asset.AssetNumber</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.AssetDescription">@asset.AssetName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold" title="@asset.ConditionDescription">@asset.ConditionStatus</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@asset.UsageStatus</span>
                                                @if (asset.NoOfConfirmedBooking > 0)
                                                {
                                                    <a asp-area="AssetManager" asp-controller="Home" asp-action="BookingList" asp-route-id="@asset.AssetID" title="This equipment is Booked. Click to view Booking List">
                                                        <span class="text-white fw-bold"><i class="bi bi-bookmarks-fill ml-2" style="font-size: 1.0rem; color:black"></i></span>
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a asp-area="AssetManager" asp-controller="Master" asp-action="Details" asp-route-id="@asset.AssetID" title="Details" class="btn btn-sm btn-dark">
                                                        <span class="text-white fw-bold">Select</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        break;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
@section Scripts{
    <script src="~/js/js_asm/asm_master_assets.js"></script>
}








